{
  "name": "@nirholas/gitbook-ai-toolkit",
  "version": "1.0.0",
  "description": "Scrape complete documentation from GitBook sites with API discovery, MCP tool generation, and versioning support. An entire toolkit in only a couple of clicks",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "gitbook-scraper": "./src/scraper.ts",
    "mcp-generator": "./src/mcp-generator.ts",
    "example-extractor": "./src/example-extractor.ts"
  },
  "scripts": {
    "scrape": "tsx src/scraper.ts",
    "scrape-v2": "tsx src/scraper-improved.ts",
    "generate-mcp": "tsx src/mcp-generator.ts",
    "generate-api-spec": "tsx src/api-spec-generator.ts",
    "generate-chunks": "tsx src/chunk-generator.ts",
    "generate-training-data": "tsx src/training-data-generator.ts",
    "extract-examples": "tsx src/example-extractor.ts",
    "scrape-best": "tsx src/scraper-improved.ts --depth 8 --delay 1500 --concurrent 2 --section-depth 2 --download-images --exclude-external-images --retry 3 --retry-delay 1500 --incremental",
    "build": "tsup src/scraper.ts src/mcp-generator.ts src/example-extractor.ts src/api-spec-generator.ts src/chunk-generator.ts src/training-data-generator.ts --format esm,cjs --dts",
    "dev": "tsx watch src/scraper.ts",
    "test": "tsx src/scraper.ts https://docs.sentry.io --output ./test-output",
    "test-v2": "tsx src/scraper-improved.ts https://docs.sentry.io --output ./test-output-v2"
  },
  "keywords": [
    "gitbook",
    "documentation",
    "scraper",
    "mcp",
    "model-context-protocol",
    "api-client-generator",
    "ai-tools",
    "versioned-docs"
  ],
  "author": "nirholas",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "cheerio": "^1.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
